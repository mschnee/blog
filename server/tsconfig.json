{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "../dist/server/",
        "rootDirs": ["./", "../generated/services"],
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noEmitOnError": true
    },
    "exclude": [
        "node_modules",
        "../scripts",
        "../client"
    ]
}